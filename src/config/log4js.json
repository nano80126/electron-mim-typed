{
	"appenders": {
		"access": {
			"type": "dateFile",
			"filename": "log/access.log",
			"pattern": "-yyyy-MM-dd",
			"category": "http"
		},
		"app": {
			"type": "file",
			"filename": "log/app.log",
			"maxLogSize": 10485760,
			"numBackups": 3
		},
		"hiper": {
			"type": "file",
			"filename": "log/hiper.log",
			"maxLogSize": 10485760,
			"numBackups": 3
		},
		"vtech": {
			"type": "file",
			"filename": "log/vtech.log",
			"maxLogSize": 10485760,
			"numBackups": 3
		},
		"errorFile": {
			"type": "file",
			"filename": "log/errors.log"
		},
		"errors": {
			"type": "logLevelFilter",
			"level": "ERROR",
			"appender": "errorFile"
		}
	},
	"categories": {
		"default": {
			"appenders": ["app", "errors"],
			"level": "DEBUG"
		},
		"hiper": {
			"appenders": ["hiper"],
			"level": "INFO"
		},
		"vtech": {
			"appenders": ["vtech"],
			"level": "INFO"
		},
		"http": {
			"appenders": ["access"],
			"level": "DEBUG"
		}
	}
}
